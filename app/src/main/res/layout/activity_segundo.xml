<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="10"
    android:columnCount="2"
    android:padding="16dp"
    tools:context=".SegundoActivity">

    <TextView
        android:id="@+id/percentTextView"
        android:layout_columnSpan="2"

        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text=" :"
        android:textSize="16sp"
        android:padding="12dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"

        android:layout_gravity="center_horizontal"
        android:scrollbars="none"
        android:fillViewport="true"/>
    <TextView
        android:id="@+id/txtViewNombre"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text="Nombre :"
        android:textSize="16sp"
        android:padding="12dp"/>


    <TextView
        android:id="@+id/txtViewApellido"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:textSize="16sp"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/txtViewBase"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text="Base :"
        android:textSize="16sp"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/ingresar_nombre"
        android:layout_width="135dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:background="#E3E0E0"
        android:padding="9dp"
        android:text=""
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/ingresar_base"
        android:layout_width="135dp"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:background="#E3E0E0"
        android:padding="9dp"
        android:text=""
        android:textSize="16sp"/>

    <Button
        android:id="@+id/button_siguiente2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="10"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="16dp"
        android:elevation="@dimen/elevation"
        android:gravity="center"
        android:onClick="onClickSiguente"
        android:padding="12dp"
        android:paddingBottom="@dimen/textView_Padding"
        android:text="Siguiente"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_cerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="10"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="16dp"
        android:elevation="@dimen/elevation"
        android:gravity="center"

        android:onClick="onClickCerrar"
        android:padding="12dp"
        android:paddingBottom="@dimen/textView_Padding"
        android:text="Cerrar"
        android:textSize="16sp" />



</GridLayout>