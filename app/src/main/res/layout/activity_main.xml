<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="10"
    android:columnCount="2"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/percentTextView"
        android:layout_columnSpan="2"

        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text=" :"
        android:textSize="16sp"
        android:padding="12dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"

        android:layout_gravity="center_horizontal"
        android:scrollbars="none"
        android:fillViewport="true"/>
    <TextView
        android:id="@+id/txtViewNombre"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text="Nombre :"
        android:textSize="16sp"
        android:padding="12dp"/>


    <TextView
        android:id="@+id/txtViewApellido"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text="Apellido :"
        android:textSize="16sp"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/txtViewBase"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text="Base :"
        android:textSize="16sp"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/txtViewExponente"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text="Exponente :"
        android:textSize="16sp"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/txtViewFactorial"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text="Factorial :"
        android:textSize="16sp"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/txtViewPotencia"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text="Potencia :"
        android:textSize="16sp"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/resutul_nombre"
        android:layout_width="135dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:background="#B8B3B3"
        android:padding="9dp"
        android:text=""
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/resutul_apellido"
        android:layout_width="135dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:background="#B8B3B3"
        android:padding="9dp"
        android:text=""
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/resutul_base"
        android:layout_width="135dp"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:background="#B8B3B3"
        android:padding="9dp"
        android:text=""
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/resutul_exponente"
        android:layout_width="135dp"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:background="#B8B3B3"
        android:padding="9dp"
        android:text=""
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/resutul_factorial"
        android:layout_width="135dp"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:background="#B8B3B3"
        android:padding="9dp"
        android:text=""
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/resutul_potencia"
        android:layout_width="135dp"
        android:layout_row="8"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:background="#B8B3B3"
        android:padding="9dp"
        android:text=""
        android:textSize="16sp"/>

    <Button
        android:id="@+id/button_siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="10"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="16dp"
        android:elevation="@dimen/elevation"
        android:gravity="center"
        android:onClick="onClickSiguente"
        android:padding="12dp"
        android:paddingBottom="@dimen/textView_Padding"
        android:text="Siguiente"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_Resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="10"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="16dp"
        android:elevation="@dimen/elevation"
        android:gravity="center"

        android:padding="12dp"
        android:paddingBottom="@dimen/textView_Padding"
        android:text="Mostrar Resultado"
        android:textSize="16sp" />



</GridLayout>